@page "/ConsultaContratos"

<EditForm Model="lista">
    <DataAnnotationsValidator />


    <div class="card-header">
        <h3>
            <center> <b>Consulta de Contratos</b></center>
        </h3>
    </div>

    <div class="card-body">

        <form>

            <div class="input-group d-flex align-items-end">

                <InputSelect class="form-select " @bind-Value="filtro">
                    <option value="0">Todos</option>
                    <option value="1">Comentarios</option>
                    <option value="2">Monto</option>
                    @* Filtrar por Fecha *@
                </InputSelect>

                <div class="flex-fill mx-2">
                    <label>Critero</label>
                    <input type="text" class="form-control" @bind-value="Criterio" />
                </div>

                <button type="button" class="btn btn-warning" @onclick="Buscar">
                    <i class="oi oi-magnifying-glass mr-2" /> <b>Buscar</b>
                </button>
            </div>
            <div class="input-group d-flex align-items-end">

                <div class="flex-fill mx-2">
                    <label>Desde</label>
                    <InputDate class="form-control" @bind-Value="FechaDesde" />
                </div>

                <div class="flex-fill mx-2">
                    <label>Hasta</label>
                    <InputDate class="form-control" @bind-Value="FechaHasta" />
                </div>
            </div>
        </form>
    </div>

    <table class="table table-success table-striped">
        <thead class="thead-dark">
            <tr class="table-info">
            
                <th>Comentarios</th>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Ver</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in lista)
            {
                <tr>
                    <td>@item.Comentarios</td>
                   @*  <td>@item.Monto</td> *@
                    <td>@item.Fecha</td> @* <----Fecha *@
                     <td><a class="btn btn-sm btn-outline-primary oi oi-eye" href="RegistroClientes/@item.ClienteId">Ver</a></td>
                </tr>
            }
        </tbody>
    </table>


    @foreach (var items in lista)
    {
        contar = items.ContratoId;
    }
    <label><b>Total Contratos:</b> @contar</label>

</EditForm>

@code {

    public Contratos contratos { get; set; } = new Contratos();

    public string filtro { get; set; }
    public string Criterio { get; set; }
    public int contar;
    public DateTime? FechaDesde { get; set; } = null;
    public DateTime? FechaHasta { get; set; } = null;

    public List<Contratos> lista { get; set; } = new List<Contratos>();

    [Inject]
    public ContratosBLL contratosBLL { get; set; }

    private void Buscar()
    {
        if (Criterio != null)
        {
            switch (filtro)
            {
                case "1":
                    lista = contratosBLL.GetList(p => p.Comentarios.ToLower().Contains(Criterio.ToLower()));
                    break;
               @*  case "2":
                    lista = contratosBLL.GetList(p => p.Monto == int.Parse(Criterio));
                    break;
 *@
            }
        }

        else
        {
            lista = contratosBLL.GetList(p => true);

        }




    }


}